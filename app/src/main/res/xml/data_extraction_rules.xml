<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules for devices API 31+
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include DataStore preferences (API keys, settings) -->
        <include domain="file" path="datastore/launcher_preferences.preferences_pb"/>

        <!-- Include Room database (conversations, messages) -->
        <include domain="database" path="."/>
    </cloud-backup>

    <device-transfer>
        <!-- Include DataStore preferences for device-to-device transfer -->
        <include domain="file" path="datastore/launcher_preferences.preferences_pb"/>

        <!-- Include Room database for device-to-device transfer -->
        <include domain="database" path="."/>
    </device-transfer>
</data-extraction-rules>